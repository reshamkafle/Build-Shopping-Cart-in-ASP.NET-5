@model IEnumerable<Shopping_Cart_ASP.NET_5.Models.Product>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model) //loop through the products
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Price)
                </td>
                <td>
                    @Html.ActionLink("Buy", "Buy", "Cart", new { sku = product.Sku }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>